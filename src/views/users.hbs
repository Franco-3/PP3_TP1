<div class="container p-4">
    <div class="row">

        {{#each users}}
            <div class="col-md-3">
                <div class="card text-center">
                         {{Nombre}} -
                         {{Correo}}
                         <a href="/users/delete/{{idUsuario}}" class="btn btn-danger">Borrar</a>
                         <a href="/users/edit/{{idUsuario}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay usuarios registrados</p>
                     <a href="/users/add">Registrar usuario</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>